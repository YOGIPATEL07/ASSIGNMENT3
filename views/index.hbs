<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YP Company POS System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }
        .navbar {
            background-color: #004d40;
        }
        .navbar-brand, .navbar-nav .nav-link {
            color: #fff !important;
        }
        .hero-section {
            background: linear-gradient(to right, #004d40, #00796b);
            color: #fff;
            padding: 80px 0;
            text-align: center;
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 400px; /* Fixed height */
            max-width: 100%;
        }
        .hero-section .container {
            position: relative;
            z-index: 1;
            max-width: 90%;
            margin: auto;
            padding: 0 15px;
        }
        .hero-section h1 {
            font-size: 2.5rem;
            font-weight: 700;
            white-space: nowrap; /* No wrap for first text */
            overflow: hidden;
            display: inline-block;
            max-width: 100%;
            border-right: .15em solid orange; /* Cursor effect */
        }
        @keyframes typing {
            from { width: 0 }
            to { width: 100% }
        }
        @keyframes blink-caret {
            from, to { border-color: transparent }
            50% { border-color: orange }
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        .hero-section p {
            font-size: 1.25rem;
            margin-top: 20px;
            margin-bottom: 30px;
            animation: fadeIn 2s ease-in-out;
        }
        .hero-section .btn-primary {
            background-color: #ff5722;
            border-color: #ff5722;
            transition: background-color 0.3s, border-color 0.3s;
        }
        .hero-section .btn-primary:hover {
            background-color: #e64a19;
            border-color: #e64a19;
        }
        .feature-box {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
            margin-bottom: 30px;
        }
        .feature-box img {
            width: 80px;
            margin-bottom: 20px;
        }
        .feature-box h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }
        .feature-box p {
            font-size: 1rem;
            color: #666;
        }
        .footer {
            background: #004d40;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>

   

    <div class="hero-section">
        <div class="container">
            <h1 id="typewriter-text">Welcome to YP Company POS</h1>
            <p id="animated-text">Your all-in-one solution for efficient grocery store management.</p>
{{#if user}}
    <a href="/employees" class="btn btn-primary btn-lg">Get Started</a>
{{else}}
    <a href="/login" class="btn btn-primary btn-lg">Login</a>
{{/if}}
        </div>
    </div>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-box">
                    <img src="https://png.pngtree.com/element_our/sm/20180516/sm_5afc4192e2e22.jpg" alt="Customers">
                    <h3>Customer Management</h3>
                    <p>Manage customer information, track purchase history, and enhance loyalty programs.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <img src="https://cdn.iconscout.com/icon/premium/png-256-thumb/employee-management-2789097-2311460.png" alt="Employees">
                    <h3>Employee Management</h3>
                    <p>Handle employee records, schedules, and performance evaluations effectively.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <img src="https://icons.veryicon.com/png/o/miscellaneous/clothing-management-system/order-processing-2.png" alt="Orders">
                    <h3>Order Processing</h3>
                    <p>Streamline order processing, from checkout to inventory updates, for a seamless experience.</p>
                </div>
            </div>
        </div>
    </div>

   

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        const typewriterText = document.getElementById('typewriter-text');
        const animatedText = document.getElementById('animated-text');
        const texts = [
            'Welcome to YP Company POS',
            'Your all-in-one solution for efficient grocery store management.',
            'Seamlessly manage products, orders, and employees in one place.',
            'Experience streamlined operations and enhanced customer satisfaction.'
        ];
        let index = 0;

        function type() {
            typewriterText.style.animation = 'none';
            void typewriterText.offsetWidth; // Trigger reflow to restart animation
            typewriterText.style.animation = 'typing 5s steps(40, end), blink-caret .75s step-end infinite';
            if (index === 0) {
                typewriterText.textContent = texts[index];
                typewriterText.style.whiteSpace = 'nowrap'; // Prevent wrapping
            } else {
                animatedText.textContent = texts[index];
                animatedText.style.whiteSpace = 'normal'; // Allow wrapping
            }
            index = (index + 1) % texts.length;
            setTimeout(type, 10000); // Pause for 10 seconds before changing text
        }

        document.addEventListener('DOMContentLoaded', () => {
            type(); // Start animation immediately
        });
    </script>

</body>
</html>
